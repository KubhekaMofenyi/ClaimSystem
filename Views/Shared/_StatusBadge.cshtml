@model ClaimSystem.Models.ClaimStatus
@{
    string cls = "secondary";
    string text = Model.ToString();

    switch (Model)
    {
        case ClaimStatus.Draft: cls = "secondary"; text = "Draft"; break;
        case ClaimStatus.Submitted: cls = "info"; text = "Submitted"; break;
        case ClaimStatus.UnderReview: cls = "warning"; text = "Under Review"; break;
        case ClaimStatus.CoordinatorApproved: cls = "primary"; text = "Coordinator Approved"; break;
        case ClaimStatus.CoordinatorRejected: cls = "dark"; text = "Coordinator Rejected"; break;
        case ClaimStatus.Approved: cls = "success"; text = "Approved"; break;
        case ClaimStatus.Rejected: cls = "danger"; text = "Rejected"; break;
    }
}
<span class="badge bg-@cls">@text</span>
