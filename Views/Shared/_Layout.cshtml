@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CMCS</title>

    <!-- Bootswatch Cosmo + Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/cosmo/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Your custom tweaks -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Prog_ClaimSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-clipboard2-check"></i> CMCS
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="Index">My Claims</a>
                        </li>

                        @if (User.IsInRole("ProgrammeCoordinator") || User.IsInRole("AcademicManager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="Review">Review Queue</a>
                            </li>
                        }
                        @* HR link — Academic Manager only *@
                        @if (User.IsInRole("HR") || User.IsInRole("AcademicManager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Hr" asp-action="Index">
                                    <i class="bi bi-people"></i> HR View
                                </a>
                            </li>
                        }
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-4">
            @await Html.PartialAsync("_Flash")
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-3 mt-auto">
        <div class="container text-muted small">
            &copy; @DateTime.Now.Year - CMCS ·
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
