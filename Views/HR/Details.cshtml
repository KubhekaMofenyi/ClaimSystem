@model IEnumerable<ClaimSystem.Models.Claim>

@{
    var lecturer = ViewBag.Lecturer as string ?? "";
    int year = ViewBag.Year;
    int month = ViewBag.Month;
    decimal totalAmount = ViewBag.TotalAmount;
    decimal totalHours = ViewBag.TotalHours;

    ViewData["Title"] = $"HR – {lecturer} {month:00}/{year}";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>HR Claim Detail</h1>
        <div class="text-muted">
            Lecturer: <strong>@lecturer</strong> • Period: <strong>@month.ToString("00")/@year</strong>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Summary
    </a>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="text-muted small">Total Approved Amount</div>
                <div class="fs-4 fw-semibold">R @totalAmount.ToString("N2")</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted small">Total Hours</div>
                <div class="fs-4 fw-semibold">@totalHours</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted small">Number of Claims</div>
                <div class="fs-4 fw-semibold">@Model.Count()</div>
            </div>
        </div>
    </div>
</div>

@foreach (var claim in Model.OrderBy(c => c.Id))
{
    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light fw-semibold d-flex justify-content-between">
            <span>Claim #@claim.Id – @claim.ModuleCode</span>
            <span class="text-muted">Total: R @claim.TotalAmount.ToString("N2")</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-sm mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th class="text-end">Hours</th>
                            <th class="text-end">Rate</th>
                            <th class="text-end">Amount</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var li in claim.LineItems.OrderBy(li => li.Date))
                        {
                            <tr>
                                <td>@li.Date.ToShortDateString()</td>
                                <td class="text-end">@li.Hours</td>
                                <td class="text-end">R @li.RatePerHour.ToString("N2")</td>
                                <td class="text-end">R @li.Amount.ToString("N2")</td>
                                <td>@li.Notes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
