@model ClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Delete claim";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <i class="bi bi-exclamation-triangle me-2"></i>Delete claim
    </div>
    <div class="card-body">
        <p class="lead mb-3">
            Are you sure you want to permanently delete this claim?
        </p>
        <dl class="row">
            <dt class="col-sm-3">Lecturer</dt>
            <dd class="col-sm-9">@Model.LecturerName</dd>

            <dt class="col-sm-3">Module</dt>
            <dd class="col-sm-9">@Model.ModuleCode</dd>

            <dt class="col-sm-3">Period</dt>
            <dd class="col-sm-9">@Model.Month/@Model.Year</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@await Html.PartialAsync("_StatusBadge", Model.Status)</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button class="btn btn-danger">
                <i class="bi bi-trash me-1"></i> Delete
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
