@model IEnumerable<ClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Review Queue";
}

<h2 class="mb-3"><i class="bi bi-clipboard-check me-2"></i>Review Queue</h2>

<div class="row row-cols-1 row-cols-md-2 g-3">
    @foreach (var c in Model)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="fw-semibold">@c.ModuleCode</div>
                            <div class="text-muted small">@c.Month/@c.Year • R @c.TotalAmount.ToString("N2")</div>
                        </div>
                        <div>@await Html.PartialAsync("_StatusBadge", c.Status)</div>
                    </div>
                </div>
                <div class="card-footer bg-transparent d-flex gap-2">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@c.Id">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <form asp-action="SetStatus" method="post" class="ms-auto d-inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <input type="hidden" name="status" value="CoordinatorApproved" />
                        <button class="btn btn-sm btn-success"><i class="bi bi-hand-thumbs-up"></i> Approve</button>
                    </form>
                    <form asp-action="SetStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <input type="hidden" name="status" value="CoordinatorRejected" />
                        <button class="btn btn-sm btn-outline-danger"><i class="bi bi-hand-thumbs-down"></i> Reject</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center text-muted py-5">
        <i class="bi bi-clipboard-x display-6 d-block mb-2"></i>
        Nothing to review right now.
    </div>
}
